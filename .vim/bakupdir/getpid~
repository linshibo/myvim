#!/bin/bash
if [ $# == 0 ] ; then 
	echo "getpid [user] program_name"
else 
	user=$1
	name=$2
	if [ $# == 1 ] ; then 
		user=`whoami`
		name=$1
	fi
	pid=`ps -u $user | grep $name | grep -v grep | grep -v vi | grep -v tail | grep -v start| grep -v stop | sed -n 1p | awk '{ print $1 }'` 
    if [ "-$pid" == "-" ] ;then 
        echo "The process does not exist."
	else
		echo $pid 
    fi 
fi
