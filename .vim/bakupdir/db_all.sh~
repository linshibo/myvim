do
        db=`printf %02d $db`
        echo "start process db : $db"
        #$my -e  "create database db_user_info_$db"
        for tb in `seq 0 9`
        do
                echo "process table $tb"
                tb=`printf %02d $tb`
                #echo "alter table db_user_info_$db.user_info_$tb add column title char(128);" | $my
                #echo "alter table db_user_info_$db.user_info_$tb add column default_logo int not null default 0;" | $my
                #echo "alter table db_user_info_$db.user_info_$tb add guide_step int unsigned not null default 0;" | $my
#               echo "alter table db_user_info_$db.user_info_$tb add guide_step int unsigned not null default 0;" | $my
                echo "update MOLE2_USER_$db.t_attire_$tb set hpmax=hpmax/5,atk=atk/5,def=def/5,speed=speed/5,matk=matk/5 where gettime<1332450000 and attire_id>=141001 and attire_id <=142540;" | $my
        done
done
