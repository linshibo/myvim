#!/bin/bash
my='mysql -uroot -pta0mee'
for db in `seq 0 99`
do
        db=`printf %02d $db`
#$my -e  "create database USER_INFO_$db"
        for tb in `seq 0 99`
        do
                echo "process db:$db tb:$tb"
                tb=`printf %02d $tb`
				$my -e  "drop table USER_INFO_$db.t_task_$tb "
                echo "create table USER_INFO_$db.t_task_$tb (
					user_id int unsigned not null,
					area_id smallint unsigned not null,
					role_tm int unsigned not null,
					taskid int unsigned not null, 
					flag int unsigned not null, 
					opt_time int unsigned not null, 
					cl_buf binary(128) not null default 0,
					primary key( user_id, area_id, role_tm)
				)ENGINE=InnoDB DEFAULT CHARSET=utf8;" | $my
        done
done
