#!/bin/bash
my='mysql -uroot -pta0mee'
for db in `seq 0 99`
do
        db=`printf %02d $db`
#$my -e  "create database USER_INFO_$db"
        for tb in `seq 0 99`
        do
                echo "process db:$db tb:$tb"
                tb=`printf %02d $tb`
				$my -e  "drop table USER_INFO_$db.t_friend_$tb"
                echo "create table USER_INFO_$db.t_friend_$tb (
					user_id int unsigned not null,
					role_tm int unsigned not null,
					area_id smallint unsigned not null,
					friend_id int unsigned not null, 
					friend_role_tm int unsigned not null, 
					friend_type int unsigned not null, 
					add_time int unsigned not null,
					primary key(user_id, role_tm, area_id)
				)ENGINE=InnoDB DEFAULT CHARSET=utf8;" | $my
        done
done
