#/bin/bash
tar -czvf onlinetest.tar  ./bin/* ./conf/* ./data/* --exclude ./conf/btlsvr.xml --exclude ./conf/common.conf
sshpass -p "gongfu" scp -p22 -o StrictHostKeyChecking=no onlinetest.tar gongfu@10.1.1.64:/home/gongfu/gf_taiwan/online_dir/
sshpass -p 'gongfu' ssh -p22 -o StrictHostKeyChecking=no -lgongfu 10.1.1.64  "pkill -9 tw_online;cd ~/gf_taiwan/online_dir/; tar -xvf onlinetest.tar "
sshpass -p 'gongfu' ssh -p22 -o StrictHostKeyChecking=no -lgongfu 10.1.1.64  "cd ~/gf_taiwan/online_dir/;./startup.sh;"

