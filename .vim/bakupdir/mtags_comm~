#!/bin/bash
cd `dirname $0`
rm -f tags
ctags -R --c++-kinds=+p --fields=+iaS --extra=+q /usr/include/*.h \
	 /usr/include/netinet/\
	 /usr/include/net/\
	 /usr/include/arpa/\
	 /usr/include/sys\
	 /usr/include/bits\
	 /usr/include/asm\
	 /usr/include/asm-generic\
	 /usr/include/arpa/\
	 /usr/include/dbser/\
	 /usr/include/libtaomee/\
	 /usr/include/libtaomee++/\
	 /usr/include/mysql/\
	 /usr/local/include/async_serv/\
	 /usr/local/include/main_login/\
	 /usr/include/i386-linux-gnu/sys/\
	 /usr/include/i386-linux-gnu/bits/\
