#ifndef  FRIENDS_H
#define  FRIENDS_H

#include "CtableRoute.h"
#include "benchapi.h"
#include <vector>
#include    "common.h"

class Cfriends : public CtableRoute
{
    public:
        Cfriends(mysql_interface* db);
		
		int add_friend(DEFAULT_ARGS, uid_role_t &ufriend);
		int del_friend(DEFAULT_ARGS, uid_role_t &ufriend);
		int add_to_blacklist(DEFAULT_ARGS, uid_role_t &blacked_user);
		int del_from_blacklist(DEFAULT_ARGS, uid_role_t &unblacked_user );
		int get_friends_list(DEFAULT_ARGS, std::vector<uid_role_t> &vec);
		int get_blacklist(DEFAULT_ARGS,  std::vector<uid_role_t> &vec);
		int get_union_list(DEFAULT_ARGS, std::vector<uid_role_t> &vec);
};

