#!/bin/bash
my='mysql -uroot -pta0mee'
for db in `seq 0 99`
do
        db=`printf %02d $db`
#$my -e  "create database USER_INFO_$db"
        for tb in `seq 0 99`
        do
                echo "process db:$db tb:$tb"
                tb=`printf %02d $tb`
				$my -e  "drop table USER_INFO_$db.t_user_$tb"
                echo "create table USER_INFO_$db.t_user_$tb (
					user_id int unsigned not null default 0,
					area_id smallint unsigned not null default 0,
					role_tm int unsigned not null default 0,
					nick char(16) not null,
					prof tinyint unsigned not null default 0,
					level smallint unsigned not null default 0,
					exp	 int unsigned not null default 0,
					flag int unsigned not null default 0,
					map_id int unsigned not null default 0,
					map_x smallint unsigned not null default 0,
					map_y smallint unsigned not null default 0,
					logout_time int unsigned not null,
					msglist varchar(2000) not null default 0,
					primary key(user_id, role_tm, area_id)
				)ENGINE=InnoDB DEFAULT CHARSET=utf8;" | $my
        done
done
