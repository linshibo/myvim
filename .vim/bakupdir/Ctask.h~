#define TASK_BUF_LEN 32
class Ctask: public CtableRoute
{
public:
	Ctask(mysql_interface* db);	
	int add( DEFAULT_ARGS,  uint32_t taskid, uint32_t buf_len, char *buff);
	int del( DEFAULT_ARGS,  uint32_t taskid );
