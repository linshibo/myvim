#               echo "alter table db_user_info_$db.user_info_$tb add guide_step int unsigned not null default 0;" | $my
                echo "update MOLE2_USER_$db.t_user_$tb set joblevel=2 where profession>=6 and joblevel=1;"
                echo "update MOLE2_USER_$db.t_user_$tb set joblevel=2 where profession>=6 and joblevel=1;" | $my
        done
done
