#!/bin/bash
my='mysql -uroot -proot'
	        for tb in `seq 0 99`
	        do
	                echo "start tb $tb"
	                tb=`printf %02d $tb`
	                echo "create table RAND_ITEM.t_rand_item_$tb  ( 
			userid int(10) unsigned NOT NULL default 0,
			randid int(10) unsigned NOT NULL default 0,
			time int(10) unsigned NOT NULL default 0,
			count int(10) unsigned NOT NULL default 0,
			PRIMARY KEY  (userid,randid)) ENGINE=InnoDB DEFAULT CHARSET=utf8;" 
	        done
