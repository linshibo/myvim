<!DOCTYPE html>
<html>
<head>
    <script type="text/javascript">
function loadXMLDoc()
{
var xmlhttp;
if (window.XMLHttpRequest)
  {// code for IE7+, Firefox, Chrome, Opera, Safari
  xmlhttp=new XMLHttpRequest();
  }
else
  {// code for IE6, IE5
  xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
  }
  xmlhttp.onreadystatechange=function()
  {
  if (xmlhttp.readyState==4 && xmlhttp.status==200)
    {
        document.getElementById("myDiv").innerHTML=xmlhttp.responseText
    }
  }
xmlhttp.open("POST","http://192.168.1.33:8888/test",true);
xmlhttp.setRequestHeader("Content-type","application/x-www-form-urlencoded");
var msg={"name":document.getElementById("id1").value}
xmlhttp.send(JSON.stringify(msg))
}
</script>
</head>
<body>
<form id="form1" method="POST">
      <input id="id1" type="text" placeholder="Username" name="name" /><br />
      <button type="button" onclick="loadXMLDoc()">send</button>
</form>
<div id="myDiv"><h2>game manager</h2></div>
<form id="form2" id="id2" method="POST">
      <input type="text" placeholder="Username" name="name2" /><br />
      <button>Login</button>
    </form>
</body>
</html>
